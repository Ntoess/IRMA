									<layoutData>
										<l:GridData span="XL2 L1 M3 S4" />
									</layoutData>
								</Text>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Text">
							<f:fields>
								<Text text="{path : 'oSelGevoModel>Gevoname', type : 'sap.ui.model.type.String', constraints : {minLength: 1,maxLength: 10}}">
