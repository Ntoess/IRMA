	</VBox>

        </content>
    <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Simulieren" press="onSimulate"/>
				<Button type="Reject" text="Schliessen" press="onCloseApp"/>
			</OverflowToolbar>
		</footer>
    </Page>
	</detailPages>
	</SplitApp>
</mvc:View>
